<UserControl x:Class="SimplifyUi.CapitalGainsGeneration.CapitalGainsWorkflowUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:SimplifyUi.Common"
             xmlns:commonViewModel="clr-namespace:SimplifyUi.Common.ViewModel"
             xmlns:viewModel="clr-namespace:SimplifyUi.CapitalGainsGeneration.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModel:CapitalGainWorkflowViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type commonViewModel:ReadExcelViewModel}">
                <common:ReadExcelUserControl/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding WorkflowStepViewModel}"></ContentControl>
    </Grid>
</UserControl>
