<Window x:Class="SimplifyUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplifyUi"
        xmlns:viewModel="clr-namespace:Simplify.ViewModel"

        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:ConsolidatedBooksGenerationWorkflowViewModel}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModel:ReadExcelViewModel}">
                <local:ReadExcelUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:DisplayMessagesViewModel}">
                <local:DisplayMessagesUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:BooksOfAccountGenerationStatusViewModel}">
                <local:BooksOfAccountGenerationStatusUserControl/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding WorkflowStepViewModel}"></ContentControl>
    </Grid>
</Window>
